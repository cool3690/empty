<?xml version="1.0" encoding="utf-8"?>
<androidx.percentlayout.widget.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">




        <TextView
            android:id="@+id/ch1txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_widthPercent="90%"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:textSize="14sp"
            android:text="ch1" />

        <WebView
            android:id="@+id/ch1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="28%"
            app:layout_widthPercent="90%"
            android:layout_below="@id/ch1txt"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp" />

        <TextView
            android:id="@+id/ch2txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_widthPercent="90%"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/ch1"
            android:layout_marginTop="20dp"
            android:textSize="14sp"
            android:text="ch2" />
        <WebView
            android:id="@+id/ch2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="28%"
            app:layout_widthPercent="90%"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/ch2txt"
            android:layout_marginTop="5dp" />

        <TextView
            android:id="@+id/txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
        android:layout_below="@id/ch2"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="25dp"
            android:text="   車牌尋找" />

        <Spinner
            android:id="@+id/choose"
            android:layout_width="220dp"
            android:layout_height="49dp"
            android:layout_marginLeft="27dp"
            android:layout_below="@id/txt1"
            android:background="@drawable/selecter"
            android:layout_marginTop="10dp"/>
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/nav_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:labelVisibilityMode="labeled"
            android:background="?android:attr/windowBackground"
            android:layout_alignParentBottom="true"
            app:menu="@menu/bottom_nav_menu" />

</androidx.percentlayout.widget.PercentRelativeLayout>